@model BookStoreProject.DAL.ViewModels.PurchaseBookVM  

@{
   ViewData["Title"] = "Create";
}

<h1>New Purchase Order</h1>

<h4>Add Purchase Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Purchase.Quantity" class="control-label"></label>
                <input asp-for="Purchase.Quantity" class="form-control" />
                <span asp-validation-for="Purchase.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Purchase.PurchaseDate" class="control-label"></label>
                <input asp-for="Purchase.PurchaseDate" class="form-control" />
                <span asp-validation-for="Purchase.PurchaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Purchase.SupplerID" class="control-label"></label>
                <select asp-for="Purchase.SupplerID" class="form-select" asp-items="@(new SelectList(Model.Suppliers,"id","Name"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="Purchase.BookId" class="control-label"></label>
                <select asp-for="Purchase.BookId" class="form-select" asp-items="@(new SelectList(Model.Books,"Id","Title"))"> </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
