@model IEnumerable<BookStoreProject.DAL.ViewModels.PurchaseOrdersList>

@{
    ViewData["Title"] = "Index";
}

<h1>Purchasing Order List</h1>

<p>
    <a asp-action="Create"class="btn btn-primary" > Create Purchase Order </a>
</p>
